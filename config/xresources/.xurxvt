! vim:set ft=xdefaults:
URxvt.intensityStyles: false
URxvt.background: #2E3440
URxvt.internalBorder: 0
!URxvt.depth: 24
URxvt.font: xft:JetBrainsMono Nerd Font:size=11
URxvt.cursorColor: #D8DEE9
URxvt*skipBuiltinGlyphs: true
Urxvt*saveLines: 65535

!! Scroll
URxvt.scrollBar: false
URxvt.keysym.Shift-Up: command:\033]720;1\007
URxvt.keysym.Shift-Down: command:\033]721;1\007
URxvt*scrollTtyOutput: false
URxvt*scrollWithBuffer: true
URxvt*scrollTtyKeypress: true

!! Extensions
URxvt.perl-ext-common: default,matcher,font-size,url-select,keyboard-select,vtwheel,clipboard,selection-to-clipboard
URxvt.colorUL: #5E81AC

!! url-select
URxvt.keysym.M-u: perl:url-select:select_next
URxvt.url-select.launcher: xdg-open
URxvt.url-select.underline: true
URxvt.url-launcher: xdg-open
URxvt.matcher.button: 1

!! Clipboard
URxvt.keysym.Shift-Control-V: eval:paste_clipboard
URxvt.keysym.Shift-Control-C: eval:selection_to_clipboard
URxvt.keyboard-select.clipboard: true
URxvt.clipboard.autocopy: true
URxvt.iso14755: false
URxvt.iso14755_52: false

!! keyboard-select:
URxvt.keysym.M-Escape: perl:keyboard-select:activate

!! Font resize
URxvt.keysym.C-plus:   font-size:increase
URxvt.keysym.C-minus:  font-size:decrease
URxvt.keysym.C-equal:  font-size:reset
URxvt.keysym.C-slash:  font-size:show

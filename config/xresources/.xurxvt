! vim:set ft=xdefaults:
URxvt.intensityStyles: false
URxvt.background: #2E3440
URxvt.internalBorder: 0
!URxvt.depth: 24
URxvt.font: xft:Terminus:size=13, xft:Symbola:size=13, xft:DroidSansMonoForPowerline Nerd Font:size=13, xft:Droid Sans Mono for Powerline:size=13
URxvt.cursorColor: #D8DEE9
URxvt*skipBuiltinGlyphs: true

!! Scroll
URxvt.scrollBar: false
URxvt.keysym.Shift-Up: command:\033]720;1\007
URxvt.keysym.Shift-Down: command:\033]721;1\007
URxvt*scrollTtyOutput: false
URxvt*scrollWithBuffer: true
URxvt*scrollTtyKeypress: true

!! Extensions
URxvt.perl-ext-common: default,matcher,font-size,url-select,keyboard-select,vtwheel,clipboard
URxvt.colorUL: #5E81AC

!! url-select
URxvt.keysym.M-u: perl:url-select:select_next
URxvt.url-select.launcher: /run/current-system/sw/bin/xdg-open
URxvt.url-select.underline: true
URxvt.url-launcher: /run/current-system/sw/bin/xdg-open
URxvt.matcher.button: 1
Urxvt*saveLines: 65535

!! Clipboard
URxvt.keysym.Shift-Control-V: perl:clipboard:paste
URxvt.keysym.Shift-Control-C: perl:clipboard:copy
URxvt.keyboard-select.clipboard: true
URxvt.clipboard.autocopy: true
URxvt.iso14755: false
URxvt.iso14755_52: false

!! keyboard-select:
URxvt.keysym.M-Escape: perl:keyboard-select:activate

!! Font resize
URxvt.keysym.C-plus:   font-size:increase
URxvt.keysym.C-minus:  font-size:decrease
URxvt.keysym.C-equal:  font-size:reset
URxvt.keysym.C-slash:  font-size:show
